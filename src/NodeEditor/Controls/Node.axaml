<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:NodeEditor.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <controls:Node />
    </Design.PreviewWith>

    <Style Selector="controls|Node">
        <!--  Set Defaults  -->
        <Setter Property="Background" Value="LightCoral" />
        <Setter Property="ClipToBounds" Value="False" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">

                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,*">
                        <Border Grid.ColumnSpan="3">
                            <ContentControl Content="{TemplateBinding Header}" />
                        </Border>


                        <controls:ConnectorsControl
                            Grid.Column="0"
                            Grid.Row="1"
                            ItemContainerTheme="{TemplateBinding ConnectorTheme}"
                            ItemsSource="{TemplateBinding Inputs}"
                            Name="PART_Inputs" />

                        <controls:HitTestSafeArea
                            Background="{TemplateBinding Background}"
                            Content="{TemplateBinding Content}"
                            Grid.Column="1"
                            Grid.Row="1" />

                        <controls:ConnectorsControl
                            Grid.Column="2"
                            Grid.Row="1"
                            ItemContainerTheme="{TemplateBinding ConnectorTheme}"
                            ItemsSource="{TemplateBinding Outputs}"
                            Name="PART_Outputs" />

                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
